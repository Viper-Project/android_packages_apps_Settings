<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

        <LinearLayout
    	    android:gravity="center"
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content"
            android:selectable="false">

            <ImageView
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
    	        android:src="@drawable/ic_viper_logo"
    	        android:adjustViewBounds="true"
    	        android:scaleType="centerInside" />
        </LinearLayout>

        <TextView
            style="@style/device_info_dialog_label"
            android:id="@+id/viper_version_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viper_version"/>
        <TextView
            style="@style/device_info_dialog_value"
            android:id="@+id/viper_version_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/device_info_dialog_label"
            android:id="@+id/viper_date_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viper_date"/>
        <TextView
            style="@style/device_info_dialog_value"
            android:id="@+id/viper_date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/device_info_dialog_label"
            android:id="@+id/viper_type_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viper_type"/>
        <TextView
            style="@style/device_info_dialog_value"
            android:id="@+id/viper_type_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/device_info_dialog_label"
            android:id="@+id/viper_device_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viper_device"/>
        <TextView
            style="@style/device_info_dialog_value"
            android:id="@+id/viper_device_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/device_info_dialog_label"
            android:id="@+id/viper_maintainer_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/viper_maintainer"/>
        <TextView
            style="@style/device_info_dialog_value"
            android:id="@+id/viper_maintainer_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>
